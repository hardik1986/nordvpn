#!/bin/bash
export PATH=".:$PATH"

export VERSION="bin"

export X86="i386 amd64"
export ARM="armv7hf aarch64" # armv5e armv6 not available in balenalib

manifestArch() {
  local options
  case $1 in
    i386)
      options="386" ;;
    amd64)
      options="amd64" ;;
    armv5e)
      options="arm --variant v5" ;;
    armv6)
      options="arm --variant v6" ;;
    armv7hf)
      options="arm --variant v7" ;;
    aarch64)
      options="arm64 --variant v8" ;;
  esac
  echo ${options}
}
