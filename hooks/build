#!/bin/bash
source hooks/_env

for arch in ${X86} ; do
  echo "**** Building ${arch}-${VERSION} ****"
  docker build -f ${DOCKERFILE_PATH} --build-arg ARCH=${arch} --build-arg NORDVPN_BIN_ARCH=$(nordVpnArch ${arch}) -t "${DOCKER_REPO}:${arch}-${VERSION}" .
done

echo "**** Enabling cross platform build ****"
sed -i 's/^#CROSSRUN/RUN/g' $DOCKERFILE_PATH

for arch in ${ARM} ; do
  echo "**** Building ${arch}-${VERSION} ****"
  docker build -f ${DOCKERFILE_PATH} --build-arg ARCH=${arch} --build-arg NORDVPN_BIN_ARCH=$(nordVpnArch ${arch}) -t "${DOCKER_REPO}:${arch}-${VERSION}" .
done
